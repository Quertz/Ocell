        <shell:ApplicationBar IsVisible="True" IsMenuEnabled="True">
            <shell:ApplicationBarIconButton IconUri="/Images/appbar_button1.png" Text="Botón 1"/>
            <shell:ApplicationBarIconButton IconUri="/Images/appbar_button2.png" Text="Botón 2"/>
            <shell:ApplicationBar.MenuItems>
                <shell:ApplicationBarMenuItem Text="Elemento de menú 1"/>
                <shell:ApplicationBarMenuItem Text="Elemento de menú 2"/>
            </shell:ApplicationBar.MenuItems>
        </shell:ApplicationBar>
    </phone:PhoneApplicationPage.ApplicationBar>-->

	<phone:PhoneApplicationPage.FontFamily>
		<StaticResource ResourceKey="PhoneFontFamilyNormal"/>
	</phone:PhoneApplicationPage.FontFamily>
	<phone:PhoneApplicationPage.FontSize>
		<StaticResource ResourceKey="PhoneFontSizeNormal"/>
	</phone:PhoneApplicationPage.FontSize>
	<phone:PhoneApplicationPage.Foreground>
		<StaticResource ResourceKey="PhoneForegroundBrush"/>
	</phone:PhoneApplicationPage.Foreground>
	
	<toolkit:TransitionService.NavigationInTransition>
	    <toolkit:NavigationInTransition>
	        <toolkit:NavigationInTransition.Backward>
	            <toolkit:TurnstileTransition Mode="BackwardIn"/>
	        </toolkit:NavigationInTransition.Backward>
	        <toolkit:NavigationInTransition.Forward>
	            <toolkit:TurnstileTransition Mode="ForwardIn"/>
	        </toolkit:NavigationInTransition.Forward>
	    </toolkit:NavigationInTransition>
	</toolkit:TransitionService.NavigationInTransition>
	<toolkit:TransitionService.NavigationOutTransition>
	    <toolkit:NavigationOutTransition>
	        <toolkit:NavigationOutTransition.Backward>
	            <toolkit:TurnstileTransition Mode="BackwardOut"/>
	        </toolkit:NavigationOutTransition.Backward>
	        <toolkit:NavigationOutTransition.Forward>
	            <toolkit:TurnstileTransition Mode="ForwardOut"/>
	        </toolkit:NavigationOutTransition.Forward>
	    </toolkit:NavigationOutTransition>
	</toolkit:TransitionService.NavigationOutTransition>

	<Grid Margin="0,-32,8,8" x:Name="LayoutRoot">
			<Grid.Background>
				<ImageBrush Stretch="Fill" ImageSource="/BackgroundFabric.png"/>
			</Grid.Background>
		<controls:Pivot Title="OCELL - SETTINGS" Margin="0,60,0,0">

			<controls:PivotItem Header="accounts" Margin="12,0">
				<Grid Height="608" Margin="0,-9,0,0">
					<Button Content="Add account" Height="72" Margin="35,286,34,250" x:Name="btnLogin" Width="379" Click="btnLogin_Click" />
					<TextBlock Height="30" Margin="213,6,-119,0" x:Name="UserName" VerticalAlignment="Top" Style="{StaticResource PhoneTextAccentStyle}" Foreground="{StaticResource PhoneForegroundBrush}" d:LayoutOverrides="Width" />
					<ListBox x:Name="Users" toolkit:TiltEffect.IsTiltEnabled="True" Margin="8,40,8,0"  Height="232" VerticalAlignment="Top" ItemTemplate="{StaticResource AccountsContextTemplate}"/>
					<TextBlock HorizontalAlignment="Left" Margin="8,8,0,0" TextWrapping="Wrap" Text="Accounts" VerticalAlignment="Top" Foreground="{StaticResource PhoneSubtleBrush}"/>
			    </Grid>
			</controls:PivotItem>
			<controls:PivotItem Header="notifications" Margin="12,8,12,0">
				<Grid>
					<ListBox x:Name="Accounts_Not" toolkit:TiltEffect.IsTiltEnabled="True" Margin="8,40,8,0" Height="232" VerticalAlignment="Top" ItemTemplate="{StaticResource AccountsTemplate}"/>
					<TextBlock HorizontalAlignment="Left" Margin="8,8,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="{StaticResource PhoneSubtleBrush}" Height="32"><Run Text="Select an account to modify its notifications"/><LineBreak/><Run/></TextBlock>
					<TextBlock HorizontalAlignment="Left" Margin="8,0,0,311" TextWrapping="Wrap" VerticalAlignment="Bottom" Text="Mentions" Foreground="{StaticResource PhoneSubtleBrush}"/>
					<toolkit:ListPicker x:Name="MentionsPicker" Margin="8,0,8,250" VerticalAlignment="Bottom">
						<toolkit:ListPickerItem x:Name="None" Content="None" HorizontalAlignment="Left"/>
						<toolkit:ListPickerItem x:Name="Tile" Content="Only Tile"/>
						<toolkit:ListPickerItem x:Name="Toast" Content="Toast and Tile"/>
					</toolkit:ListPicker>
					<TextBlock HorizontalAlignment="Left" Margin="8,0,0,198" TextWrapping="Wrap" VerticalAlignment="Bottom" Text="Messages" Foreground="{StaticResource PhoneSubtleBrush}"/>
					<toolkit:ListPicker x:Name="MessagesPicker" Margin="8,0,8,142" VerticalAlignment="Bottom">
						<toolkit:ListPickerItem x:Name="None1" Content="None" HorizontalAlignment="Left"/>
						<toolkit:ListPickerItem x:Name="Tile1" Content="Only Tile"/>
						<toolkit:ListPickerItem x:Name="Toast1" Content="Toast and Tile"/>
					</toolkit:ListPicker>
				</Grid>
			</controls:PivotItem>
			<controls:PivotItem Header="other">
				<ScrollViewer ScrollViewer.HorizontalScrollBarVisibility="Disabled">
					<Grid>
						<toolkit:ToggleSwitch x:Name="RetweetsInMentions" Header="Show retweets in the mentions column" VerticalAlignment="Top" Checked="RetweetsInMentions_Checked" Unchecked="RetweetsInMentions_Checked"/>
						<toolkit:ToggleSwitch x:Name="ColumnUpdate" Header="Update tiles in the background" Margin="0,139,0,0" VerticalAlignment="Top" Checked="ColumnUpdate_Checked" Unchecked="ColumnUpdate_Checked"/>
						<TextBlock HorizontalAlignment="Left" Margin="8,0,0,109" TextWrapping="Wrap" Width="432" Foreground="{StaticResource PhoneSubtleBrush}" Height="96" VerticalAlignment="Bottom"><Run Text="To add columns tiles, go to the main page and press &quot;pin column to start&quot; in the bottom bar."/><LineBreak/><Run/></TextBlock>
						<Button x:Name="ComposePin" Content="Pin compose tile to start" HorizontalAlignment="Left" Margin="52,270,0,0" Width="344" Click="ComposePin_Click" VerticalAlignment="Top"/>
						<TextBlock HorizontalAlignment="Left" Margin="8,106,0,0" TextWrapping="Wrap" Text="Tiles" VerticalAlignment="Top" Foreground="{StaticResource PhoneAccentBrush}" FontFamily="Segoe WP Semibold" FontSize="24"/>
						<TextBlock HorizontalAlignment="Left" Margin="8,0,0,101" TextWrapping="Wrap" VerticalAlignment="Bottom" Foreground="{StaticResource PhoneAccentBrush}" FontFamily="Segoe WP Semibold" FontSize="24" RenderTransformOrigin="0.5,0.507" Text="Global filter"/>
						<Button x:Name="filter_btn" Content="Edit global filters" HorizontalAlignment="Left" Margin="52,0,0,28" VerticalAlignment="Bottom" Width="344" Click="FilterClick"/>
					</Grid>
				</ScrollViewer>
			</controls:PivotItem>
		</controls:Pivot>

	</Grid>

</phone:PhoneApplicationPage>
